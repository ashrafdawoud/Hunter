<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ChatDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/down_curved_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp"
            android:text="providor"
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:onClick="finish"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/quantum_ic_arrow_back_grey600_24"
            app:tint="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:onClick="finish"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_chat_bill"
            app:tint="#fff"
            android:id="@+id/bill"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/track"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:onClick="finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_chat_bubble_24"
            app:tint="#fff"
            android:layout_toStartOf="@+id/bill"
            android:id="@+id/closechat"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:onClick="finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chat_track"
            app:tint="#fff"
            android:id="@+id/track"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:id="@+id/chat"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/textsend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_decore"
            android:hint="send text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:paddingStart="5dp"/>
        <ImageView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_assets_room_send_message"/>
    </LinearLayout>
</LinearLayout>