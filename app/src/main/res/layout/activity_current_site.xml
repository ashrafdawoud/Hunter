<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CurrentSiteActivity"
    android:id="@+id/coordinatorLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/splash_back_color">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:fontFamily="@font/arizonia"
                android:text="Hunter"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="170dp"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#fff"
        android:background="#fff"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Choose your Location"
                android:background="@drawable/edittext_decore"
                android:layout_margin="15dp"
                android:paddingTop="17dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:elevation="25dp"
                android:onClick="showMap"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Adress"
                android:textSize="20dp"
                android:textColor="#000"
                android:textAlignment="center"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Adress"
                android:textSize="17dp"
                android:textColor="#F42525"
                android:layout_margin="15dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/order"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Order Now"
                android:background="@drawable/edittext_decore"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:paddingTop="14dp"
                android:textSize="17dp"
                android:textAlignment="center"
                android:elevation="25dp"
                android:onClick="ordernow"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:id="@+id/bottom_sheet"
        android:background="@android:color/white"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_alignParentBottom="true">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:layout_weight="1"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirm This Location"
            android:background="@drawable/edittext_decore"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            android:textSize="18dp"
            android:textColor="#454444"
            android:textAlignment="center"
            android:elevation="25dp"
            android:onClick="hidemap"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>