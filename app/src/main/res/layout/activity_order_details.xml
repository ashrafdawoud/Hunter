<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/down_curved_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cairo_extralight"
            android:paddingTop="5dp"
            android:text="Order Details"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:onClick="finish"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/quantum_ic_arrow_back_grey600_24"
            app:tint="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="60dp"

                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#fff"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_add_shopping_cart_24"
                    android:scaleType="centerCrop"

                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="0dp">
                    <TextView
                        android:id="@+id/places"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كشري البرنس"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:textColor="#4C4B4B"
                        android:layout_marginTop="10dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#F6E3B4"
                        android:layout_marginEnd="7dp">

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
                <TextView
                    android:id="@+id/discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="this is resturant discription"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:textColor="#4C4B4B"
                    android:layout_marginTop="7dp"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="3dp">
                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="25dp"
                        android:padding="2dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_tag"/>
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 eg"
                        android:textSize="17dp"
                        android:textColor="#272727"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/clock"
                        android:layout_marginStart="5dp"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/12/1222"
                        android:textSize="17dp"
                        android:layout_marginEnd="7dp"
                        android:textColor="#272727"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:layout_marginEnd="7dp">

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>