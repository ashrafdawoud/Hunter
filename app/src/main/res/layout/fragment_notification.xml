<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomePageFragments.NotificationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/down_curved_border">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Notification"
            android:textColor="#fff"
            android:fontFamily="@font/cairo_extralight"
            android:textSize="35dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_chat_bubble_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_assignment_24"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/notificationrecy"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/mockoutlinear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/my_view1"
            >
            <View
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#bbb"
                android:layout_marginEnd="5dp"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/my_view2"
            >
            <View
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#bbb"
                android:layout_marginEnd="5dp"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/my_view3"
            >
            <View
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#bbb"
                android:layout_marginEnd="5dp"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/my_view4"
            >
            <View
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#bbb"
                android:layout_marginEnd="5dp"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/my_view5"
            >
            <View
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#bbb"
                android:layout_marginEnd="5dp"
                android:layout_margin="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#bbb"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>