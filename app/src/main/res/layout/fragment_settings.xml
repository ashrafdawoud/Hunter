<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomePageFragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/down_curved_border">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:textColor="#fff"
            android:fontFamily="@font/cairo_semibold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_chat_bubble_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_assignment_24"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/icon"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="60dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="#fff"
                    app:cardElevation="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashraf"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#4C4B4B"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashraf@gmail.com"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#4C4B4B"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_below="@+id/name"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#673AB7"/>
            <RelativeLayout
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/f1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f1"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/f2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 eg"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toStartOf="@+id/f2"
                    android:layout_marginEnd="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of Requests"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f3"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/f4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toStartOf="@+id/f4"
                    android:layout_marginEnd="5dp"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rates"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f5"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/f7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toStartOf="@+id/f7"
                    android:layout_marginEnd="5dp"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f6"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/addpromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Coupon"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f9"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#673AB7"/>
            <RelativeLayout
                android:id="@+id/telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call us on Telegram "
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f10"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/signupdriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/f11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in as Driver"
                    android:fontFamily="@font/cairo_extralight"
                    android:layout_toEndOf="@+id/f11"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>