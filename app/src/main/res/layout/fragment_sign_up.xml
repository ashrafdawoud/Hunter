<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.LoginFragments.SignUpFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:background="@drawable/edittext_decore"
        android:layout_margin="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:textCursorDrawable="@drawable/coursor"
        android:textColor="#484849"
        android:textSize="16dp"
        android:elevation="25dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:background="@drawable/edittext_decore"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:textCursorDrawable="@drawable/coursor"
        android:textColor="#484849"
        android:textSize="16dp"
        android:elevation="25dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@drawable/edittext_decore"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_password"
        android:textCursorDrawable="@drawable/coursor"
        android:textColor="#484849"
        android:textSize="16dp"
        android:elevation="25dp"
        android:drawablePadding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by pressing sign up you agree  to our terms and conditions"
        android:textAlignment="center"
        android:textColor="#B3B0B0"
        android:textSize="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="15dp"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>