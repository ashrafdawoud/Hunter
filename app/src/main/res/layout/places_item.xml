<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:backgroundTint="#fff"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    android:padding="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#fff"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/place"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="0dp">
                <TextView
                    android:id="@+id/placesname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="place"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#4C4B4B"
                    android:layout_marginTop="10dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#F6E3B4"
                    android:layout_marginEnd="7dp">
                    <TextView
                        android:id="@+id/promoted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promoted"
                        android:textSize="15dp"
                        android:textColor="#4C4B4B"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <TextView
                android:id="@+id/placedisc"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="this is place discription"
                android:textSize="16dp"
                android:textColor="#4C4B4B"
                android:layout_marginTop="5dp"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp">
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.3 km"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/homebagetabs"
                        android:layout_marginTop="10dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/blue"
                        android:layout_marginEnd="7dp">
                        <TextView
                            android:id="@+id/ordernow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Now"
                            android:textSize="18dp"
                            android:textColor="#fff"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>